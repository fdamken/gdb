<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lcmanager.gdb.service.impl.data.mapper.CategoryMapper">
	<resultMap type="Category" id="category">
		<id property="id" column="id" />
		<result property="description" column="description" />
	</resultMap>

	<!-- Methods from BaseMapper. -->
	<insert id="insert" parameterType="Map" useGeneratedKeys="true" keyProperty="obj.id">
		INSERT INTO Category (
			id,
			description
		) VALUES (
			#{obj.id},
			#{obj.descriptipn}
		)
	</insert>
	<update id="update" parameterType="Map">
		UPDATE
			Category
		SET
			description = #{obj.description}
		WHERE
			id = #{obj.id}
	</update>
	<insert id="save" parameterType="Map" useGeneratedKeys="true" keyProperty="obj.id">
		INSERT INTO Category (
			id,
			description
		) VALUES (
			#{obj.id},
			#{obj.description}
		) ON DUPLICATE KEY UPDATE
			description = #{obj.description}
	</insert>
	<delete id="delete" parameterType="Map">
		DELETE
		FROM
			Category
		WHERE
			id = #{id}
	</delete>
	<select id="exists" parameterType="Map" resultType="boolean">
		SELECT
			COUNT(*)
		FROM
			Category
		WHERE
			id = #{id}
	</select>
	<select id="findById" parameterType="Map" resultMap="category">
		SELECT
			id,
			description
		FROM
			Category
		WHERE
			id = #{id}
	</select>
	<select id="find" resultMap="category">
		SELECT
			id,
			description
		FROM
			Category
	</select>

	<!-- Methods from CategoryMapper. -->
</mapper>
